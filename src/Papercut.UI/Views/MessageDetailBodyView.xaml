<UserControl x:Class="Papercut.Views.MessageDetailBodyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:helpers="clr-namespace:Papercut.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="{DynamicResource MahApps.Brushes.Gray5}" BorderThickness="1">
            <Grid>
                <avalonEdit:TextEditor
                    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
                    Name="BodyEdit"
                    Padding="4"
                    FontFamily="Consolas"
                    FontSize="10.5pt" IsReadOnly="True" />
                <helpers:ZoomIndicator x:Name="zoomIndicator" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
