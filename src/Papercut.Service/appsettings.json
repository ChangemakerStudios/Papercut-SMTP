{
  "Urls": "http://0.0.0.0:8080",

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },

  "SmtpServer": {
    "IP": "Any",
    "Port": 2525,
    "MessagePath": "%BaseDirectory%\\Incoming",
    "LoggingPath": "%DataDirectory%\\Logs;%BaseDirectory%\\Logs"
  },

  "AllowedHosts": "*"
}